# TFVisualizer Environment Variables
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
APP_PORT=80
PORT=80
FRONTEND_URL=http://localhost
BACKEND_URL=http://localhost

# Database (PostgreSQL)
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_PORT=5432
DATABASE_URL=postgresql://tfuser:your_secure_postgres_password@localhost:5432/tfvisualizer

# Redis
REDIS_PASSWORD=your_secure_redis_password
REDIS_PORT=6379
REDIS_URL=redis://:your_secure_redis_password@localhost:6379

# Authentication (Generate secure random strings for production)
JWT_SECRET=your_very_secure_jwt_secret_min_32_chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_very_secure_refresh_secret_min_32_chars
JWT_REFRESH_EXPIRES_IN=30d

# Stripe Configuration
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Create a Price in Stripe Dashboard for $4.99/month recurring
STRIPE_PRICE_ID_PRO=price_your_pro_price_id

# AWS Configuration (for S3 file storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
S3_BUCKET_NAME=tfvisualizer-files-production

# Feature Flags
ENABLE_COLLABORATION=true
ENABLE_ANALYTICS=true

# Logging
LOG_LEVEL=info

# Nginx (if using nginx profile)
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Email Configuration (optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password
EMAIL_FROM=noreply@tfvisualizer.com

# OAuth Providers (optional)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Terraform Cloud API (optional - for advanced features)
TFC_TOKEN=your_terraform_cloud_token

# Monitoring & Analytics (optional)
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=UA-XXXXX-Y
