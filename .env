# TFVisualizer Environment Variables

# Application
NODE_ENV=development
PORT=8080
FRONTEND_URL=http://localhost:8080
BACKEND_URL=http://localhost:8080

# Database (PostgreSQL)
POSTGRES_PASSWORD=tfpass_dev_only
DATABASE_URL=postgresql://tfuser:tfpass_dev_only@postgres:5432/tfvisualizer

# Redis
REDIS_PASSWORD=redis_dev_only
REDIS_URL=redis://:redis_dev_only@redis:6379

# Authentication
JWT_SECRET=dev_jwt_secret_change_in_production_minimum_32_characters_long
SECRET_KEY=dev_secret_key_change_in_production

# Stripe Configuration
# IMPORTANT: Get test keys from https://dashboard.stripe.com/test/apikeys
# Then create a product and price at https://dashboard.stripe.com/test/products
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_PUBLISHABLE_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE
STRIPE_PRICE_ID_PRO=price_YOUR_PRO_PRICE_ID_HERE

# Stripe URLs
STRIPE_SUCCESS_URL=http://localhost:8080/subscription/success
STRIPE_CANCEL_URL=http://localhost:8080/pricing

# AWS Configuration (optional for now)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=tfvisualizer-files

# Feature Flags
ENABLE_COLLABORATION=false
ENABLE_ANALYTICS=false

# Logging
LOG_LEVEL=INFO
